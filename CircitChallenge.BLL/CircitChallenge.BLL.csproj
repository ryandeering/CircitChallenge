  </ItemGroup>

	<ItemGroup>
		<AdditionalFiles Include="..\CircitChallenge.API\stylecop.json" Link="stylecop.json" />
	</ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Extensions" Version="2.2.0" />
